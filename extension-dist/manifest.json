{
    "manifest_version": 2,
    "name": "Weather App Extension",
    "version": "1.0",
    "description": "Your simple weather app extension",
    "icons": {
      "16": "icons/icon.svg",
      "48": "icons/icon.svg",
      "128": "icons/icon.svg"
    },
    "browser_action": {
      "default_popup": "index.html",
      "default_icon": "icons/icon.svg"
    },
    "permissions": [
      "geolocation",
      "storage"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  }